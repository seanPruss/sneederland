{
  // Workspaces
  "hyprland/workspaces": {
    "active-only": false,
    "format": "{name}",
  },

  "custom/updates": {
    "format": " {}",
    "exec": "~/.config/waybar/scripts/check-updates.sh",
    "on-click": "pypr toggle update",
    "interval": 60,
  },

  // Clock
  "clock": {
    "format": "󰥔 {:%H:%M %Y-%m-%d}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}",
  },

  // Battery
  "battery": {
    "states": {
      "warning": 25,
      "critical": 15,
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% ",
    "format-plugged": "{capacity}% ",
    "format-alt": "{time} {icon}",
    "format-icons": ["", "", "", "", ""],
  },

  // Power Button
  "custom/power": {
    "format": "&#x23FB;",
    "tooltip": true,
    "on-click": "wlogout",
  },

  // Audio Information
  "pulseaudio": {
    "format": "{icon} {volume}% ",
    "format-bluetooth": "{icon}  {volume}%",
    "format-bluetooth-muted": " {icon}  ",
    "format-muted": " ",
    "format-source": " {volume}%",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "",
      "hands-free": "󱠰",
      "headset": "󰋎",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", "", ""],
    },
    "on-click": "pypr toggle volume",
    "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
  },

  // Brightness Information
  "backlight": {
    "format": "{percent}% {icon}",
    "format-icons": ["", "", "", "", "", "", "", "", ""],
  },

  "cpu": {
    "format": " {}%  ",
    "on-click": "pypr toggle btop",
  },

  "memory": {
    "format": "{}%  ",
    "on-click": "pypr toggle btop",
  },

  // System Tray
  "tray": {
    "icon-size": 18,
    "spacing": 5,
  },

  "custom/spotify": {
    "format": " {} ",
    "exec": "~/.config/waybar/scripts/mediaplayer.sh",
    "return-type": "json",
    "on-click": "playerctl -p spotify play-pause",
    "on-scroll-up": "playerctl -p spotify next",
    "on-scroll-down": "playerctl -p spotify previous",
    "exec-if": "pgrep spotfiy",
  },

  "custom/weather": {
    "format": "{}°",
    "tooltip": true,
    "interval": 3600,
    "exec": "wttrbar",
    "return-type": "json",
  },

  "custom/launcher": {
    "format": "󰀻",
    "on-click": "rofi -show",
    "tooltip-format": "Keybindings:\nSUPER+Q: Close window\nSUPER+L: Lock screen\nSUPER+M: Logout menu\nSUPER+T: Launch terminal\nSUPER+B: Launch browser\nSUPER+D: Launch Discord\nSUPER+S: Toggle Spotify\nSUPER+E: Toggle Thunderbird\nSUPER+C: Toggle Cava\nSUPER+Y: Toggle Yazi\nSUPER+V: Launch volume control\nSUPER+I: Install a package\nSUPER+U: Update packages\nSUPER+TAB: App launcher\nSUPER+P: Cycle wallpaper\nSUPER+W: Restart Waybar\nSUPER+SHIFT+S: Take a screenshot\nSUPER+SHIFT+B: Toggle btop\nALT+TAB: Show active windows\nALT+V: Launch cliphist\nALT+W: Wipe cliphist cache",
  },

  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 24,
    "icon-theme": "BeautyLine",
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
  },

  "hyprland/window": {
    "separate-outputs": true,
    "icon": true,
  },
  "custom/notification": {
    "tooltip": false,
    "format": "{icon} {} ",
    "format-icons": {
      "notification": "<span foreground='red'><sup></sup></span>",
      "none": "",
      "dnd-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-none": "",
      "inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "inhibited-none": "",
      "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-inhibited-none": "",
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true,
  },
}
